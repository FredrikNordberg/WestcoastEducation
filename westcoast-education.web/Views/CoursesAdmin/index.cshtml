@model IList<westcoast_education.web.Models.Course>

@{
    Layout = "_LayoutAdmin";
}

<section class="page">
    <h1>Aktuella kurser</h1>
    <div class="table-container">
        <div>
            <a class="btn btn-primary" asp-action="create" asp-controller="CoursesAdmin">Lägg till kurs</a>
        </div>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Kurs ID</th>
                    <th>Ämne</th>
                    <th>Plats</th>
                    <th>Språk</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td class="edit-icon">
                            <a asp-action="Edit" asp-controller="CoursesAdmin" asp-route-courseId=@course.CourseId><i
                                class="fa-solid fa-pen"></i></a>
                        </td>
                        <td>@course.CourseId</td>
                        <td>@course.CourseName</td>
                        <td>@course.CourseLocation</td>
                        <td>@course.CourseLanguage</td>
                        <td><a class="delete-icon" asp-action="Delete" asp-controller="CoursesAdmin"
                            asp-route-courseId=@course.CourseId><i class="fa-solid fa-trash-can"></i></a></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </tfoot>
        </table>
    </div>
</section>
