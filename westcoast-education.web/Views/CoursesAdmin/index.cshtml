@model IList<westcoast_education.web.ViewModels.CourseListViewModel>

@{
    Layout = "_LayoutAdmin";
}

<section class="page">
    <h1>Aktuella kurser</h1>
    <div class="table-container">
        <div>
            <a class="btn btn-primary" asp-action="create" asp-controller="CoursesAdmin">LÃ¤gg till kurs</a>
        </div>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Kursnummer</th>
                    <th>Kursnamn</th>
                    <th>Kurstitel</th>
                    <th>Startdatum</th>
                    <th>Slutdatum</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td class="edit-icon">
                            <a asp-action="Edit" asp-controller="CoursesAdmin" asp-route-courseId=@course.CourseId><i
                                class="fa-solid fa-pen"></i></a>
                        </td>
                        <td>@course.CourseNumber</td>
                        <td>@course.CourseName</td>
                        <td>@course.CourseTitle</td>
                        <td>@course.CourseStartDate</td>
                        <td>@course.CourseEndDate</td>
                        <td><a class="delete-icon" asp-action="Delete" asp-controller="CoursesAdmin"
                            asp-route-courseId=@course.CourseId><i class="fa-solid fa-trash-can"></i></a></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </tfoot>
        </table>
    </div>
</section>
