@model westcoast_education.web.ViewModels.CourseUpdateViewModel

@{
    Layout = "_LayoutAdmin";
}

<section class="page">
    <h1 class="page-title">LÃ¤gg till kurs</h1>
    <form class="shadow" asp-action="edit" asp-controller="CoursesAdmin" asp-route-courseId=@Model.CourseId
    method="post">
        <div class="form-control">
            <label asp-for="CourseId"></label>
            <input asp-for="CourseId" />
            <span class="error" asp-validation-for="CourseId"></span>
        </div>
        <div class="form-control">
            <label asp-for="CourseName"></label>
            <input asp-for="CourseName" />
            <span class="error" asp-validation-for="CourseName"></span>
        </div>
        <div class="form-control">
            <label asp-for="CourseTitle"></label>
            <input asp-for="CourseTitle" />
            <span class="error" asp-validation-for="CourseTitle"></span>
        </div>
        <div class="form-control">
            <label asp-for="CourseStartDate"></label>
            <input asp-for="CourseStartDate" />
            <span class="error" asp-validation-for="CourseStartDate"></span>
        </div>
         <div class="form-control">
            <label asp-for="CourseEndDate"></label>
            <input asp-for="CourseEndDate" />
            <span class="error" asp-validation-for="CourseEndDate"></span>
        </div>

        <div class="form-control">
            <div class="buttons-container">
                <button type="Submit" class="btn btn-primary"><i class="fa-sharp fa-solid fa-floppy-disk"></i>
                    Spara</button>
                <a asp-action="index" asp-controller="CoursesAdmin" class="btn btn-warning"><i
                        class="fa-solid fa-arrow-left"></i>Avbryt</a>
            </div>
        </div>
    </form>
</section>