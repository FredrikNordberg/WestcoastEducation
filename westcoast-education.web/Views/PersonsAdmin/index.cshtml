@model IList<westcoast_education.web.ViewModels.Persons.PersonsListViewModel>

@{
    Layout = "_LayoutAdmin";
}

<section class="page">
    <h1>Lärare och Studenter</h1>
    <div class="table-container">
        <div>
            <a class="btn btn-primary" asp-action="create" asp-controller="PersonsAdmin">Lägg till användare</a>
        </div>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Användarnamn</th>
                    <th>Titel</th>
                    <th>Förnamn</th>
                    <th>Efternamn</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td class="edit-icon">
                            <a asp-action="Edit" asp-controller="PersonsAdmin" asp-route-personId=@person.PersonId><i
                                class="fa-solid fa-pen"></i></a>
                        </td>
                        <td>@person.PersonUserName</td>
                        <td>@person.PersonTitle</td>
                        <td>@person.PersonName</td>
                        <td>@person.PersonLastName</td>
                        <td>@person.PersonEmail</td>
                        <td>@person.PersonPhone</td>
                        <td><a class="delete-icon" asp-action="Delete" asp-controller="PersonsAdmin"
                            asp-route-personId=@person.PersonId><i class="fa-solid fa-trash-can"></i></a></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </tfoot>
        </table>
    </div>
</section>